$break_points = 750px 990px

media_s()
  @media (max-width: $break_points[0] - 1)
    {block}

media_m()
  @media (min-width: $break_points[0]) and (max-width: $break_points[1] - 1)
   {block}

media_l()
  @media (min-width: $break_points[1])
    {block}

colored-block-with(color)
  .colored-bg
    background-color color
  .colored-text
    color color
  .colored-btn
    color white
    background-color color
    border 1px solid color
    &:hover
      background-color transparent
      text-decoration none
      box-sizing border-box
      color color

@require 'pagination'
