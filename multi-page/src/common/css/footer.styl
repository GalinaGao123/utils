.footer-container
  max-width 1600px
  margin 0 auto
  font-size 15px
  background-color #fcfcfc
  position relative

  a
    color black

  #qrcode-weixin
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 100
    display none
    +media_s()
      position fixed
    .bg-cover
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background-color black
      opacity 0.85
    .weixin
      max-width 150px
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      img
        margin 0 auto
      .text
        color white
        text-align center
        font-size 18px
        line-height 1.5em
        margin-top 1em
  .footer
    width 560px
    margin 0 auto
    padding 40px 0
    box-sizing border-box
    +media_s()
      width 100%
      padding 35px 10px
    .links-destop
      margin-bottom 60px
      clearfix()
      +media_s()
        display none
      .group
        margin 0 auto
        width 25%
        float left
        text-align center
        box-sizing border-box
        position relative
        .title
          font-weight bold
        .content
          a
            display block
            margin 20px 0
            &:first-child
              margin-top 25px
    .links-mobile
      margin-bottom 20px
      display none
      +media_s()
        display block
      .group
        text-align left
        font-size 20px
        line-height 2.8em
        padding-top 3px
        border-bottom 1px solid grey
        +media_s()
          font-size 14px
        .title
          font-weight normal
          position relative
          &:after
            content ''
            position absolute
            top 48%
            right 0
            margin-top -4.5px
            width 10px
            height @width
            background url('../resources/icons/plus.png') no-repeat center center
            float right
        &.active
          .title
            font-weight bold
            &:after
              background-image url('../resources/icons/minus.png')
        .content
          display none
          font-size 18px
          +media_s()
            font-size 14px
          a
            display block
            margin 0
    .social
      text-align center
      padding-bottom 25px
      border-bottom 1px solid black
      +media_s()
        padding-bottom 15px
        border-bottom none
      .text
        display inline
        +media_s()
          display block
          margin-bottom 5px
      .ways
        display inline
        +media_s()
          display block
          font-size 30px
        .way
          margin 0 15px
          &:hover
            text-decoration none
          img
            height 30px
            display inline
            vertical-align bottom
            +media_s()
              height 25px

    .privacy
      text-align center
      margin 25px 0 18px
      line-height 1.5em
      +media_s()
        font-size 13px
        margin 20px 0
      a
        display inline-block
        margin 0 10px
        +media_s()
          margin 0 20px 7px
      br
        display none
        +media_s()
          display inline

    .copyright
      text-align center
      font-size 16px
      color #777
