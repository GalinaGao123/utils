.color-block
  padding 40px 0
  +media_s()
    padding 0

  &-title
    position absolute
    left 100%
    top 0
    width 245px
    height 100%
    color white
    +media_m()
      width 30%
      left 70%
    +media_s()
      position relative
      left 0
      width 100%
      height auto
    .title
      box-sizing border-box
      line-height 1em
      font-size 48px
      font-weight bold
      position absolute
      top 20px
      left 30px
      transition top 0.5s
      padding-top 10px
      margin 0
      +media_s()
        width 100%
        text-align center
        font-size 35px
        position static
        padding 0.4em 0em 0.2em
        br
          display none
    .more
      display block
      color white
      position absolute
      bottom 10px
      left 30px
      font-size 20px
      +media_s()
        left auto
        bottom auto
        top 50%
        right 5px
        font-size 18px
        transform translateY(-50%)

  &-content
    position relative
    width 745px
    box-sizing border-box
    +media_m()
      width 100%
    +media_s()
      width 100%

  &-detail
    box-sizing border-box
    padding 0 30px 0 0
    +media_m()
      width 70%
      padding 0 30px
    +media_s()
      padding 10px 10px 25px


  &.opposite
    .color-block-content
      margin-left 245px
      +media_m()
        width 100%
        margin-left 0
      +media_s()
        width 100%
        margin-left 0


    .color-block-title
      right 100%
      left auto
      .title
        position absolute
        top 30px
        right @top
        left auto
        text-align right
      .more
        left auto
        right 30px
      +media_m()
        left 0
        right auto
      +media_s()
        right auto
        .title
          position static
          text-align center
        .more
          right 10px

    .color-block-detail
      width 100%
      padding 0 0 0 30px
      +media_m()
        margin-left 30%
        width 70%
        padding 0 30px
      +media_s()
        margin-left 0
        padding 10px 10px 25px


html:lang(en)
  .color-block-title
    .title
      font-size 40px
      +media_s()
        font-size 36px
