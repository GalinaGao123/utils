@css {
  @font-face {
    font-family: 'CFABreuerText';
    src: url('../resources/fonts/CFABreuerText-Bold.eot?#iefix') format('embedded-opentype'),  url('../resources/fonts/CFABreuerText-Bold.otf')  format('opentype'),
  	     url('../resources/fonts/CFABreuerText-Bold.woff') format('woff'), url('../resources/fonts/CFABreuerText-Bold.ttf')  format('truetype'), url('../resources/fonts/CFABreuerText-Bold.svg#CFABreuerText-Bold') format('svg');
    font-weight: bold;
    font-style: normal;
  }

  @font-face {
    font-family: 'CFABreuerText';
    src: url('../resources/fonts/CFABreuerText-RegularItalic.eot?#iefix') format('embedded-opentype'),  url('../resources/fonts/CFABreuerText-RegularItalic.otf')  format('opentype'),
  	     url('../resources/fonts/CFABreuerText-RegularItalic.woff') format('woff'), url('../resources/fonts/CFABreuerText-RegularItalic.ttf')  format('truetype'), url('../resources/fonts/CFABreuerText-RegularItalic.svg#CFABreuerText-RegularItalic') format('svg');
    font-weight: normal;
    font-style: italic;
  }

  @font-face {
    font-family: 'CFABreuerText';
    src: url('../resources/fonts/CFABreuerText-Regular.eot?#iefix') format('embedded-opentype'),  url('../resources/fonts/CFABreuerText-Regular.otf')  format('opentype'),
  	     url('../resources/fonts/CFABreuerText-Regular.woff') format('woff'), url('../resources/fonts/CFABreuerText-Regular.ttf')  format('truetype'), url('../resources/fonts/CFABreuerText-Regular.svg#CFABreuerText-Regular') format('svg');
    font-weight: normal;
    font-style: normal;
  }
}


body
  font-family 'CFABreuerText', 'Hiragino Sans GB', 'Microsoft Yahei', 'Helvetica neue', 'Helvetica', 'Tahoma', 'sans-serif'
  color #222
  font-size 16px
  +media_s()
    font-size 14px


img
  display block
  max-width 100%
  height auto
ul,
ol
  padding-left 18px
  li
    padding-left 5px
a
  color #003da5
  text-decoration none
  &:hover
    text-decoration underline
p
  line-height 1.5em
.page
  margin-top 55px
  +media_m()
    margin-top 100px
  +media_s()
    margin-top 55px
  .area-outer
    max-width 1600px
    margin 0 auto
    overflow hidden
    .area-inner
      max-width 990px
      margin 0 auto


.icon
  display inline-block
  background-size 100% 100%
  background-repeat no-repeat
  background-position center center

.responsive-img
  .mobile
    display none
  +media_s()
    .desktop
      display none
    .mobile
      display block

.en-font-size
  font-size 56px
  +media_s()
    font-size 40px

.font-bold
  font-weight bold

.display-none
  display none

html:lang(en)
  body
    font-size 15px
