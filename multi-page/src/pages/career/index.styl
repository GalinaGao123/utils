@require '../../common/css/define'

.compass
  colored-block-with(#5c2f92)
  background-color #fcfcfc
  .content-wrap
    border 1px solid #ededed
    background-color white
    margin-bottom 30px
    padding 25px 30px
    +media_s()
      padding 15px
    p
      font-size 16px
      +media_s()
        font-size 14px
    &:last-child
      margin-bottom 0
    h3.colored-text
      font-size 25px
      margin-bottom 0px
    .quote
      margin-bottom 15px
      position relative
      font-size 16px
      +media_s()
        font-size 14px
        margin-bottom 10px
      sup
        font-size 36px
        top 0.3em
        font-family 'Helvetica'
    .job
      font-size 22px
      line-height 1.5em
      color #5c2f92
      margin-bottom 10px
      +media_s()
        font-size 20px
        margin-bottom 5px
.vip
  colored-block-with(#009966)
  .content-wrap
    border 1px solid #ededed
    margin-bottom 30px
    &:last-child
      margin-bottom 0
    h3.name
      font-size 25px
      color #009966
      margin-bottom 0px
    p.job
      font-size 22px
      margin-bottom 15px
      color #009966
      +media_s()
        font-size 20px

html:lang(en)
  .compass
    .content-wrap
      p
        font-size 15px
      .quote
        font-size 15px
      .job
        font-size 22px
        +media_s()
          font-size 20px
