@require '../../common/css/define'

.mission
  colored-block-with(#008ed6)
  .content-wrap
    border 1px solid #ededed
    padding 25px 30px
    +media_s()
      padding 20px 15px
    h3
      margin-bottom 10px

.values
  colored-block-with(#5c068c)
  background-color #fcfcfc
  .content-wrap
    border 1px solid #ededed
    border-top none
    background-color white

.meetting
  colored-block-with(#5b77cc)
  .content-wrap
    border 1px solid #ededed
    &.inner
      margin-bottom 30px
      padding 25px 30px
      +media_s()
        margin-bottom 15px
        padding 20px 15px
    h3
      font-size 25px

.plan
  colored-block-with(#003da5)
  background-color #fcfcfc
  .content-wrap
    background-color white
    border 1px solid #ededed

.history
  colored-block-with(#009966)
  .more-wrap
    text-align center
    .more
      display inline-block
      text-align center
      cursor pointer
      .arrow
        width 15px
        height @width
        margin-bottom 10px
        display inline-block
        box-sizing border-box
        border-right 2px solid #009966
        border-bottom 2px solid #009966
        transform rotate(45deg)

  .time-line
    position relative

    .line
      width 2px
      height 100%
      position absolute
      top 0
      left 50%
      margin-left -(@width/2)
      background linear-gradient(top, white, 10% #009966, 90% #009966, white)

    &-block
      position relative
      &:after
        content ''
        display block
        width 10px
        height @width
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        border-radius 50%
        background-color #009966

      .img-holder
        width 45%
        box-sizing border-box
        box-shadow 5px 5px 5px #ddd
        border-right 5px solid white
        border-bottom 5px solid white
        border-radius 5px
        +media_s()
          box-shadow 2px 2px 2px #ddd
          border-right 2px solid white
          border-bottom 2px solid white
          border-radius 2px
        img
          width 100%
      .year
        font-size 90px
        font-weight bold
        position absolute
        top 50%
        left 55%
        transform translateY(-50%)
        +media_s()
          font-size 45px

    &-info
      width 45%
      line-height 1.5em
      margin-top 10px
      +media_s()
        font-size 14px

    &-item
      margin-bottom 30px
      +media_s()
        margin-bottom 10px

    &-item:nth-child(odd)
      .img-holder
        margin-left 55%
        box-shadow -5px 5px 5px #ddd
        border-left 5px solid white
        border-right none
        +media_s()
          box-shadow -2px 2px 2px #ddd
          border-left 2px solid white
      .year
        left auto
        right 55%
      .time-line-info
        margin-left 55%

    &-item:nth-child(n+5)
      display none

    &-item.no-img
      position relative
      .img-holder
        display none
      .time-line-block
        min-height 236px
      .time-line-info
        position absolute
        top 97px
